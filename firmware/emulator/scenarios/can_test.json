{
    "name": "CAN Bus Communication Test",
    "description": "Tests CAN message reception and signal extraction",
    "version": "1.0",

    "voltage_mV": 13800,
    "temperature_C": 30,

    "adc": [100, 200, 300, 400, 500, 600, 700, 800, 900, 1000,
            50, 150, 250, 350, 450, 550, 650, 750, 850, 950],

    "can_messages": [
        {
            "name": "Engine RPM",
            "bus": 0,
            "id": "0x100",
            "data": [0, 0, 31, 64, 0, 0, 0, 0],
            "interval_ms": 100,
            "description": "RPM = 8000 (0x1F40) at bytes 2-3"
        },
        {
            "name": "Coolant Temperature",
            "bus": 0,
            "id": "0x101",
            "data": [90, 0, 0, 0, 0, 0, 0, 0],
            "interval_ms": 500,
            "description": "Temp = 90C at byte 0"
        },
        {
            "name": "Vehicle Speed",
            "bus": 1,
            "id": "0x200",
            "data": [0, 120, 0, 0, 0, 0, 0, 0],
            "interval_ms": 50,
            "description": "Speed = 120 km/h at byte 1"
        },
        {
            "name": "Battery Voltage",
            "bus": 1,
            "id": "0x201",
            "data": [180, 53, 0, 0, 0, 0, 0, 0],
            "interval_ms": 1000,
            "description": "Voltage = 13.8V (0x35B4 / 100) at bytes 0-1"
        }
    ],

    "comments": [
        "This scenario simulates a running engine with CAN data",
        "Bus 0: Engine ECU messages (RPM, coolant temp)",
        "Bus 1: Vehicle data (speed, battery voltage)",
        "Use this to test CAN signal extraction and virtual channels"
    ]
}
